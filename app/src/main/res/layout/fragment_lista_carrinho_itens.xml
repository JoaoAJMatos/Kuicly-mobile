<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ListaCarrinhoItensFragment">


    <ListView
        android:id="@+id/lvCarrinhoItens"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


    <!-- Layout linear para conter o TextView e o Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp">

        <!-- TextView para exibir o total -->
        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- BotÃ£o para finalizar a compra -->
        <Button
            android:id="@+id/btnPagamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finalizar Compra"
            android:layout_marginBottom="16dp" />

    </LinearLayout>





</FrameLayout>